{
  "name": "judawnloads",
  "description": "Мне надоел бардак в папке загрузок, поэтому я написал это расширение.",
  "version": "0.4",
  "manifest_version": 2,
  "background": {
    "scripts": ["background.js"]
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["script.js"],
      "run_at": "document_end"
    }
  ],
  "icons": {
    "48": "48x48.png"
  },
  "browser_action": {
    "default_popup": "index.html",
    "default_icon": "48x48.png"
  },
  "permissions": ["downloads", "storage","declarativeContent", "activeTab"]
}